{% extends "::base.html.twig" %}

{% block main %}

    <h1>Contact</h1>

    {% if app.session.flashbag.has('contact_thanks') %}
        {% for flashMessage in app.session.flashbag.get('contact_thanks') %}
            <div class="alert alert-dismissable alert-success">
                <button type="button" class="close" data-dismiss="alert">Ã—</button>
                <p>{{ flashMessage }}</p>
            </div>
        {% endfor %}
    {% else %}

        <p>Please use the contact form below if you want to drop us a line. We will respond to your message withing 24
            hours.</p>

        <div class="row">
            <div class="col-lg-6">
                <form action="{{ path("ayrshireminis_submit_contact") }}" method="post" class="form-horizontal">
                    <fieldset>
                        {{ form_widget(form) }}
                        <br />
                        <p>
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </p>
                    </fieldset>
                </form>
            </div>
        </div>
    {% endif %}

{% endblock %}