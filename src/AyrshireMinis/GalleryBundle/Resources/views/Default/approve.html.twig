{% if admin.isGranted('approve', object) and admin.hasRoute('approve') %}
    <a href="{{ admin.generateObjectUrl('approve', object) }}" class="btn btn-sm btn-success"
       title="{{ 'action_approve'|trans({}, 'AyrshireMinisGalleryBundle') }}">
        <i class="glyphicon glyphicon-ok"></i>
        Approve
    </a>
{% endif %}
{% if admin.isGranted('reject', object) and admin.hasRoute('reject') %}
    <a href="{{ admin.generateObjectUrl('reject', object) }}" class="btn btn-sm btn-danger"
       title="{{ 'action_reject'|trans({}, 'AyrshireMinisGalleryBundle') }}">
        <i class="glyphicon glyphicon-remove"></i>
        Reject
    </a>
{% endif %}
